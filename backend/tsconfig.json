{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "lib": ["ES2020"],
    "sourceMap": true
  },
  "include": [
    "*.ts", 
    "**/*.ts",
    "routes/**/*.ts",
    "controllers/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
