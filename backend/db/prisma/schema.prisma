// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // or "mysql", "sqlite", etc. - use your actual database provider
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(uuid())
  title       String
  description String?
  category    String
  author      String
  image_url   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relation to Cart
  cartItems   Cart[]
}

model Cart {
  id        String   @id @default(uuid())
  projectId String
  userId    String?
  createdAt DateTime @default(now())
  
  // Relation to Project
  project   Project  @relation(fields: [projectId], references: [id])
  
  @@index([userId])
  @@index([projectId])
}
